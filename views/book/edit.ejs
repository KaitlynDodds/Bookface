<% include ../partials/header %>

<div class="form-container ">
	
	<h4>Edit: <%= book.title %></h4>

	<form class="book-info-form ui equal width form" action="/books/<%= book._id %>?_method=PUT" method="POST">
		<div class="fields">
			<div class="field">
				<label>Title</label>
				<input type="text" id="title" name="book[title]" value="<%= book.title %>">
			</div>

			<div class="field">
				<label>Rating</label>
				<div class="ui huge rating form" data-rating="<%= book.rating %>" data-max-rating="5"></div>
				<input type="hidden" id="ratingValue" name="book[rating]" value="<%= book.rating %>">
			</div>
		</div>
		
		<div class="fields">
			<div class="field">
				<label>Author</label>
				<input type="text" id="author" name="book[author]" value="<%= book.author %>">
			</div>

			<div class="field">
				<label>Cover Art</label>
				<input type="text" id="image" name="book[image]" value="<%= book.image %>">
			</div>
		</div>
		
		<div class="field">
			<label>Description</label>
			<textarea id="description" name="book[description]" ><%= book.description %></textarea>
		</div>

		<input class="ui positive basic button" type="submit" value="Post Book">

		<div class="ui error message"></div>
	</form>

</div>

<% include ../partials/footer %>