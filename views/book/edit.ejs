<% include ../partials/header %>

<h3>Edit: <%= book.title %></h3>

<form class="ui equal width form" action="/books/<%= book._id %>?_method=PUT" method="POST">
	<div class="fields">
		<div class="field">
			<label>Title</label>
			<input type="text" name="book[title]" value="<%= book.title %>">
		</div>

		<div class="field">
			<label>Author</label>
			<input type="text" name="book[author]" value="<%= book.author %>">
		</div>
	</div>
	
	<div class="fields">
		<div class="field">
			<label>Cover Art</label>
			<input type="text" name="book[image]" value="<%= book.image %>">
		</div>

		<div class="field">
			<label>Rating</label>
			<select class="ui dropdown" name="book[rating]">
				<option value="0">0</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
		</div>
	</div>
	
	<div class="field">
		<label>Description</label>
		<textarea name="book[description]" ><%= book.description %></textarea>
	</div>

	<button class="ui right floated basic button" type="submit">Post Book</button>

</form>


<% include ../partials/footer %>