<% include ../partials/header %>

<div class="form-container ">
	
	<h4>Edit: <%= book.title %></h4>

	<form class="book-info-form ui equal width form" action="/books/<%= book._id %>?_method=PUT" method="POST">
		<div class="fields">
			<div class="field">
				<label>Title</label>
				<input type="text" id="title" name="book[title]" value="<%= book.title %>">
			</div>

			<div class="field">
				<label>Author</label>
				<input type="text" id="author" name="book[author]" value="<%= book.author %>">
			</div>
		</div>
		
		<div class="fields">
			<div class="field">
				<label>Cover Art</label>
				<input type="text" id="image" name="book[image]" value="<%= book.image %>">
			</div>

			<div class="field">
				<label>Rating</label>
				<select class="ui dropdown" id="rating" name="book[rating]">
					<option value="0">0</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</select>
			</div>
		</div>
		
		<div class="field">
			<label>Description</label>
			<textarea id="description" name="book[description]" ><%= book.description %></textarea>
		</div>

		<input class="ui positive basic button" type="submit" value="Post Book">

		<div class="ui error message"></div>
	</form>

</div>

<% include ../partials/footer %>