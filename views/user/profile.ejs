<% include ../partials/header %>

<%- include('../partials/navbar', {isLoggedIn: isLoggedIn, user: user}); %>

<div class="ui stackable grid">
	<div class="six wide column">

		<div id="profile-avatar" class="ui segment">
			<img class="ui centered image" src="<%= user.avatar %>">
			<div class="content">
				<h3 class="ui dividing header">
				  <%= user.username %>
				</h3>
				<div>
					<small>Email: <a href="mailto:<%= user.email %>"><%= user.email %></a></small>
					<small class="float-right sub header"><strong>Member Since: </strong><%= user.date_joined.toDateString() %></small>
				</div>
				<div id="bio">
					<p><%= user.bio %></p>					
				</div>
			</div>
		</div>

		<div>
			<button class="ui right floated basic purple button">Edit Profile</button>
			<form action="" method="">
				<button class="ui left floated basic negative button">Delete Profile</button>
			</form>
		</div>

	</div>
	<div class="ten wide column">
		<%= user.bio %>
	</div>
</div>

<% include ../partials/footer %>